<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nego" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/Themecolor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Nego.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nego.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nego.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize hint color -->
        <item name="android:textColorHint">#808080</item>
        <!-- Customize box stroke color -->
        <item name="boxStrokeColor">#C0C0C0</item>
        <!-- Customize box stroke width -->
        <item name="boxStrokeWidth">2dp</item>
        <!-- Customize box corner radius -->
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <!-- Customize error text appearance -->
        <item name="errorTextAppearance">@style/ErrorAppearance</item>
    </style>

    <style name="ErrorAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">12sp</item>
    </style>




</resources>